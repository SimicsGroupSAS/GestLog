<UserControl x:Class="GestLog.Modules.GestionVehiculos.Views.Vehicles.VehicleDocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:GestLog.Controls"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="520">

    <UserControl.Resources>
        <converters:LoadingIndicatorVisibilityConverter x:Key="LoadingIndicatorVisibilityConverter" />
        <!-- Estilos locales para mantener consistencia visual -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="6" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#EDEDED" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para DataGrid -->
        <Style TargetType="DataGrid" x:Key="DocumentsDataGridStyle">
            <Setter Property="RowHeight" Value="48" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#EFEFEF" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="RowBackground" Value="White" />
            <!-- Asegurar que el contenido de las celdas estÃ© centrado vertical y horizontalmente -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Padding" Value="6,0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="#333" />
                        <Style.Triggers>
                            <!-- Evitar el fondo azul por defecto en celdas seleccionadas: dejar transparente y delegar el estilo al DataGridRow -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="#0B3F19" />
                            </Trigger>
                            <!-- Mantener apariencia al recibir el foco dentro de la celda -->
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para centrar TextBlocks dentro de columnas de texto (usado por ElementStyle) -->
        <Style x:Key="CenteredTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="Foreground" Value="#504F4E" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="8,0" />
        </Style>

        <!-- Estilo para botones de acciÃ³n (icon-buttons) -->
        <Style x:Key="ActionIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="6" Width="36" Height="36">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3FFF3" />
                    <Setter Property="BorderBrush" Value="#E6F6E8" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E8F9E9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Row style para alinear contenido verticalmente y controlar selecciÃ³n -->
        <Style x:Key="DocumentsDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="4,0" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#333" />
            <Style.Triggers>
                <!-- Selected row: usar verde muy claro y texto oscuro para buen contraste -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EAF9EE" />
                    <Setter Property="Foreground" Value="#0B3F19" />
                </Trigger>
                <!-- Hover visual ligero para filas no seleccionadas -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FBFFFB" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="BadgeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <!-- Estado calculado en DTO / VM: StatusText, StatusBackground, StatusForeground -->
    </UserControl.Resources>

    <Grid Background="Transparent" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header: bÃºsqueda y acciones -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search box -->
            <Border Style="{StaticResource CardStyle}" Background="#FFFFFF" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ”Ž" VerticalAlignment="Center" Margin="6,0" Foreground="#9D9D9C" />
                    <Grid Grid.Column="1">
                        <TextBox x:Name="SearchBox" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderThickness="0" Foreground="#333" FontSize="13"
                                 VerticalAlignment="Center" Padding="6,6" HorizontalAlignment="Stretch" />
                        <TextBlock IsHitTestVisible="False" Text="Buscar documentos..." VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="12,0,0,0">
                <Button Style="{StaticResource PrimaryButtonStyle}" Content="+ Nuevo Documento" Click="BtnNewDocument_Click" />
                <Border CornerRadius="8" Background="#FFFFFF" BorderBrush="#118938" BorderThickness="1" Margin="8,0,0,0" Padding="4,2" Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="6" />
                    </Border.Effect>
                    <Button Content="Actualizar" Background="Transparent" Foreground="#118938" Padding="8,6" Command="{Binding RefreshCommand}"
                            BorderThickness="0" FocusVisualStyle="{x:Null}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Cursor="Hand">
                        <!-- Plantilla simple para evitar el chrome por defecto y respetar el Border redondeado padre -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Contenido principal: DataGrid dentro de card -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="16" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Filtros / acciones adicionales (se puede extender) -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,8">
                    <!-- Placeholder para futuros filtros por tipo/fecha -->
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocument}"
                          AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          ColumnWidth="*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          RowStyle="{StaticResource DocumentsDataGridRowStyle}" Style="{StaticResource DocumentsDataGridStyle}" CanUserResizeColumns="True"
                          SelectionMode="Single" SelectionUnit="FullRow">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding DocumentType}" Width="*" ElementStyle="{StaticResource CenteredTextBlockStyle}" EditingElementStyle="{StaticResource CenteredTextBlockStyle}" />
                        <DataGridTextColumn Header="NÃºmero" Binding="{Binding DocumentNumber}" Width="1.2*" ElementStyle="{StaticResource CenteredTextBlockStyle}" EditingElementStyle="{StaticResource CenteredTextBlockStyle}" />
                        <DataGridTextColumn Header="EmisiÃ³n" Binding="{Binding IssuedDate, StringFormat=dd/MM/yyyy}" Width="0.9*" ElementStyle="{StaticResource CenteredTextBlockStyle}" EditingElementStyle="{StaticResource CenteredTextBlockStyle}" />
                        <DataGridTextColumn Header="Vencimiento" Binding="{Binding ExpirationDate, StringFormat=dd/MM/yyyy}" Width="0.9*" ElementStyle="{StaticResource CenteredTextBlockStyle}" EditingElementStyle="{StaticResource CenteredTextBlockStyle}" />

                        <DataGridTemplateColumn Header="Estado" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Border Style="{StaticResource BadgeStyle}" Background="{Binding StatusBackground}">
                                            <TextBlock Style="{StaticResource BadgeTextStyle}" Text="{Binding StatusText}" Foreground="{Binding StatusForeground}" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Acciones" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <!-- Ver -->
                                        <Button Style="{StaticResource ActionIconButtonStyle}"
                                                ToolTip="Ver documento"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.PreviewCommand}"
                                                CommandParameter="{Binding}" Margin="0,0,8,0">
                                            <TextBlock Text="ðŸ”" FontSize="14" />
                                        </Button>

                                        <!-- Eliminar -->
                                        <Button Style="{StaticResource ActionIconButtonStyle}"
                                                ToolTip="Eliminar documento"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.DeleteDocumentCommand}"
                                                CommandParameter="{Binding}">
                                            <TextBlock Text="ðŸ—‘ï¸" FontSize="14" Foreground="#C0392B" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Mensaje cuando no hay documentos (mostrar sÃ³lo cuando NO se estÃ¡ cargando y Count == 0) -->
                <TextBlock Grid.Row="1" Text="No hay documentos registrados" Foreground="#9D9D9C" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <!-- Por defecto oculto -->
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <!-- Mostrar sÃ³lo cuando IsLoading == false y Documents.Count == 0 -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False" />
                                        <Condition Binding="{Binding Documents.Count}" Value="0" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Indicador de carga: mostrar solo cuando IsLoading == true y LoadingProgress > 0 -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel.Visibility>
                        <MultiBinding Converter="{StaticResource LoadingIndicatorVisibilityConverter}">
                            <Binding Path="IsLoading" />
                            <Binding Path="LoadingProgress" />
                        </MultiBinding>
                    </StackPanel.Visibility>

                    <TextBlock Text="Cargando documentos..." Foreground="#9D9D9C" FontSize="13" HorizontalAlignment="Center" Margin="0,0,0,8" />
                    <!-- SimpleProgressBar existe en Controls/ -->
                    <controls:SimpleProgressBar Width="200" BarHeight="10" ProgressValue="{Binding LoadingProgress}" ShowHeader="False" ShowMessage="False" ShowPercentage="True" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
