<UserControl x:Class="GestLog.Modules.GestionVehiculos.Views.Vehicles.VehicleDocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:GestLog.Controls"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="520">

    <UserControl.Resources>
        <converters:LoadingIndicatorVisibilityConverter x:Key="LoadingIndicatorVisibilityConverter" />
        <!-- Estilos locales para mantener consistencia visual -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="6" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#EDEDED" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos para DataGrid -->
        <Style TargetType="DataGrid" x:Key="DocumentsDataGridStyle">
            <Setter Property="RowHeight" Value="48" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#EFEFEF" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FAFAFA" />
            <Setter Property="Foreground" Value="#504F4E" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="8,0" />
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header: b칰squeda y acciones -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search box -->
            <Border Style="{StaticResource CardStyle}" Background="#FFFFFF" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="游댍" VerticalAlignment="Center" Margin="6,0" Foreground="#9D9D9C" />
                    <Grid Grid.Column="1">
                        <TextBox x:Name="SearchBox" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderThickness="0" Foreground="#333" FontSize="13"
                                 VerticalAlignment="Center" Padding="6,6" HorizontalAlignment="Stretch" />
                        <TextBlock IsHitTestVisible="False" Text="Buscar documentos..." VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="12,0,0,0">
                <Button Style="{StaticResource PrimaryButtonStyle}" Content="+ Nuevo Documento" Click="BtnNewDocument_Click" />
                <Border CornerRadius="8" Background="#FFFFFF" BorderBrush="#118938" BorderThickness="1" Margin="8,0,0,0">
                    <Button Content="Actualizar" Background="Transparent" Foreground="#118938" Padding="10,8" Command="{Binding RefreshCommand}" />
                </Border>
            </StackPanel>
        </Grid>

        <!-- Estad칤sticas -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,12">
            <Border Style="{StaticResource CardStyle}" Width="180" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock FontSize="12" Foreground="#706F6F" Text="Total" />
                    <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#333" Text="{Binding Statistics.TotalDocuments}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}" Width="180" Background="#E8F5E9" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock FontSize="12" Foreground="#37AB4E" Text="Vigentes" />
                    <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#37AB4E" Text="{Binding Statistics.ValidDocuments}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}" Width="180" Background="#FFF3E0" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock FontSize="12" Foreground="#FF9800" Text="Por vencer" />
                    <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#FF9800" Text="{Binding Statistics.SoonToExpireDocuments}" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}" Width="180" Background="#FFEBEE">
                <StackPanel>
                    <TextBlock FontSize="12" Foreground="#C0392B" Text="Vencidos" />
                    <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#C0392B" Text="{Binding Statistics.ExpiredDocuments}" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Contenido principal: DataGrid dentro de card -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="16" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Filtros / acciones adicionales (se puede extender) -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,8">
                    <!-- Placeholder para futuros filtros por tipo/fecha -->
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocument}"
                          AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">

                    <DataGrid.Style>
                        <Style TargetType="DataGrid" BasedOn="{StaticResource DocumentsDataGridStyle}">
                            <Setter Property="Visibility" Value="{Binding Documents.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=invert}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>

                    <DataGrid.Columns>
                        <!-- Miniatura / Icono -->
                        <DataGridTemplateColumn Header="" Width="48">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="36" Height="36" Background="#F5F5F5" CornerRadius="6" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="游늯" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Tipo" Binding="{Binding DocumentType}" Width="160" />
                        <DataGridTextColumn Header="N칰mero" Binding="{Binding DocumentNumber}" Width="140" />
                        <DataGridTextColumn Header="Emisi칩n" Binding="{Binding IssuedDate, StringFormat=dd/MM/yyyy}" Width="110" />
                        <DataGridTextColumn Header="Vencimiento" Binding="{Binding ExpirationDate, StringFormat=dd/MM/yyyy}" Width="110" />

                        <DataGridTemplateColumn Header="Estado" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Border Background="#FFEBEE" CornerRadius="6" Padding="6,4" 
                                                Visibility="{Binding IsExpired, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="Vencido" Foreground="#C0392B" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                                        </Border>

                                        <Border Background="#E8F5E9" CornerRadius="6" Padding="6,4" 
                                                Visibility="{Binding IsExpired, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=negate}">
                                            <TextBlock Text="Vigente" Foreground="#10B981" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Margin="0,0,8,0" Background="Transparent" Foreground="#118938" BorderThickness="0"
                                                Padding="6" Cursor="Hand" Content="Descargar" FontSize="12"
                                                ToolTip="Descargar documento" Click="BtnDownload_Click" />
                                        <Button Background="Transparent" Foreground="#C0392B" BorderThickness="0"
                                                Padding="6" Cursor="Hand" Content="Eliminar" FontSize="12"
                                                ToolTip="Eliminar documento"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.DeleteDocumentCommand}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Mensaje cuando no hay documentos (mostrar s칩lo cuando NO se est치 cargando y Count == 0) -->
                <TextBlock Grid.Row="1" Text="No hay documentos registrados" Foreground="#9D9D9C" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <!-- Por defecto oculto -->
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <!-- Mostrar s칩lo cuando IsLoading == false y Documents.Count == 0 -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False" />
                                        <Condition Binding="{Binding Documents.Count}" Value="0" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Indicador de carga: mostrar solo cuando IsLoading == true y LoadingProgress > 0 -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel.Visibility>
                        <MultiBinding Converter="{StaticResource LoadingIndicatorVisibilityConverter}">
                            <Binding Path="IsLoading" />
                            <Binding Path="LoadingProgress" />
                        </MultiBinding>
                    </StackPanel.Visibility>

                    <TextBlock Text="Cargando documentos..." Foreground="#9D9D9C" FontSize="13" HorizontalAlignment="Center" Margin="0,0,0,8" />
                    <!-- SimpleProgressBar existe en Controls/ -->
                    <controls:SimpleProgressBar Width="200" BarHeight="10" ProgressValue="{Binding LoadingProgress}" ShowHeader="False" ShowMessage="False" ShowPercentage="True" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
