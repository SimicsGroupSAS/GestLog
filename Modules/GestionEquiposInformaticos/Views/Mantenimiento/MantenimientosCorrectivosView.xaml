<UserControl x:Class="GestLog.Modules.GestionEquiposInformaticos.Views.Mantenimiento.MantenimientosCorrectivosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:GestLog.Converters"
             xmlns:equiposViews="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Views.Equipos"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" />
        <conv:EstadoToColorConverter x:Key="EstadoToColorConverter" />
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:IsStringNullOrEmptyConverter x:Key="IsStringNullOrEmptyConverter" />
        <conv:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
        <conv:DecimalToCopCurrencyConverter x:Key="DecimalToCopCurrencyConverter" />

        <!-- Paleta corporativa GestLog -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#118938"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#2B8E3F"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#504F4E"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#706F6F"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#9D9D9C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#C0392B"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F9B233"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>

        <!-- Estilos de texto -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatsTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Estilos de botones -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircularButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="28" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        </Style>

        <!-- Estilo de texto para celdas DataGrid (como Perif茅ricos) -->
        <Style x:Key="DataGridTextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,8,0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>

        <!-- Estilo de fila DataGrid -->
        <Style x:Key="DataGridRowEstadoStyle" TargetType="DataGridRow">
            <Setter Property="Opacity" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con gradiente -->
        <Border Grid.Row="0" Padding="24,16" Margin="16,16,16,0" CornerRadius="8,8,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#118938" Offset="0"/>
                    <GradientStop Color="#2B8E3F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="8" Padding="8" Margin="0,0,16,0" Width="56" Height="56">
                        <TextBlock Text="" FontFamily="Segoe UI Emoji" FontSize="26" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Mantenimientos Correctivos" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Text="Gesti贸n de reparaciones y mantenimientos reactivos" Style="{StaticResource SubHeaderTextStyle}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Estad铆sticas -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="20" Margin="16,0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,1,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Mantenimientos.Count}" Style="{StaticResource StatsTextStyle}"/>
                    <TextBlock Text="Total" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="0" Style="{StaticResource StatsTextStyle}" Foreground="{StaticResource WarningBrush}"/>
                    <TextBlock Text="Pendientes" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="0" Style="{StaticResource StatsTextStyle}" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="En Reparaci贸n" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="0" Style="{StaticResource StatsTextStyle}" Foreground="{StaticResource SuccessBrush}"/>
                    <TextBlock Text="Completados" FontWeight="Medium" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,0,0">
                    <!-- Bot贸n Refrescar (c铆rculo) -->
                    <Button Content="&#xE72C;" Command="{Binding RefreshCommand}" ToolTip="Actualizar lista de mantenimientos" Style="{StaticResource CircularButtonStyle}" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                    <!-- Bot贸n Agregar (c铆rculo con glyph) - estilo consistente con otras vistas -->
                    <Button Content="&#xE710;" Command="{Binding AgregarMantenimientoCommand}" ToolTip="Agregar mantenimiento" Style="{StaticResource CircularButtonStyle}" FontFamily="Segoe MDL2 Assets"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="20" Margin="16,0,16,16" CornerRadius="0,0,8,8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,1,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros: TextBox a la izquierda; checkboxes a la derecha (sin bot贸n refrescar) -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="Filtrar:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Medium"/>
                        <TextBox Width="420" Padding="8" VerticalAlignment="Center" Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" BorderBrush="{StaticResource BorderBrush}" ToolTip="Filtrar por equipo, proveedor o texto libre"/>
                    </StackPanel>                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <CheckBox Content="Pendientes" IsChecked="{Binding FiltrarPendientes, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                        <CheckBox Content="Completados" IsChecked="{Binding FiltrarCompletados, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                        <CheckBox Content="Cancelados" IsChecked="{Binding FiltrarCancelados, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                        <CheckBox Content="En Reparaci贸n" IsChecked="{Binding FiltrarEnReparacion, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource TextPrimaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid (alineado a Perif茅ricos) -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Mantenimientos}"
                          SelectedItem="{Binding SelectedMantenimiento}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          RowHeaderWidth="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                          AlternatingRowBackground="#F9F9F9"
                          FontSize="13"
                          RowHeight="40"
                          RowStyle="{StaticResource DataGridRowEstadoStyle}"
                          ColumnWidth="*"
                          EnableColumnVirtualization="False"
                          VirtualizingPanel.VirtualizationMode="Standard"
                          ScrollViewer.CanContentScroll="True"
                          Margin="0,0,0,16">

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </DataGrid.CellStyle>                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Equipo" Binding="{Binding Codigo}" Width="*" MinWidth="180" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                        <DataGridTextColumn Header="Falla" Binding="{Binding DescripcionFalla}" Width="*" MinWidth="260" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                        <DataGridTextColumn Header="Proveedor" Binding="{Binding ProveedorAsignado}" Width="SizeToCells" MinWidth="160" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaFalla, StringFormat=dd/MM/yyyy}" Width="SizeToCells" MinWidth="120" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                        <DataGridTextColumn Header="Costo" Binding="{Binding CostoReparacion, Converter={StaticResource DecimalToCopCurrencyConverter}}" Width="SizeToCells" MinWidth="120" IsReadOnly="True" ElementStyle="{StaticResource DataGridTextBlockStyle}"/>

                        <DataGridTemplateColumn Header="Estado" Width="SizeToCells" MinWidth="160" IsReadOnly="True" SortMemberPath="Estado">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" ToolTip="{Binding Estado}">
                                        <Ellipse Width="14" Height="14" VerticalAlignment="Center" Fill="{Binding Estado, Converter={StaticResource EstadoToColorConverter}}" Stroke="#BFBFBF" StrokeThickness="0.5"/>
                                        <TextBlock Text="{Binding Estado, Converter={StaticResource EnumToDescriptionConverter}}" Margin="8,0,0,0" VerticalAlignment="Center" Style="{StaticResource DataGridTextBlockStyle}" FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="" Width="SizeToCells" MinWidth="120" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Detalles"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DataContext.VerDetallesMantenimientoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            MinWidth="88" Width="Auto" Height="32" HorizontalAlignment="Center" Margin="4,0"
                                            Focusable="False"
                                            ClickMode="Release"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pie de p谩gina -->
                <Border Grid.Row="2" Background="#F5F5F5" Padding="8" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}">
                    <TextBlock Text="{Binding Mantenimientos.Count, StringFormat='Total: {0} mantenimientos'}" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="11"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
