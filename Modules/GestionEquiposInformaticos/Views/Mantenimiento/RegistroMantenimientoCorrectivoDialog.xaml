<Window x:Class="GestLog.Modules.GestionEquiposInformaticos.Views.Mantenimiento.RegistroMantenimientoCorrectivoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:GestLog.Converters"
        mc:Ignorable="d"
        Title="Registrar Mantenimiento Correctivo" Height="720" Width="1000" WindowStartupLocation="Manual"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        UseLayoutRounding="True" SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" TextOptions.TextHintingMode="Fixed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Modules/GestionEquiposInformaticos/Views/Equipos/ModalWindowsStandard.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid MouseLeftButtonDown="Overlay_MouseLeftButtonDown" UseLayoutRounding="True" SnapsToDevicePixels="True" Background="#80000000">
        <!-- Panel centrado siguiendo el dise帽o de DetallesEquipoInformaticoView -->
        <Border Width="750" MaxHeight="720"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="1"
                BorderBrush="{StaticResource BorderBrush}"
                Effect="{StaticResource WindowShadow}">
            <!-- Evitar que clicks dentro del panel cierren la ventana -->
            <Border.MouseLeftButtonDown>Panel_MouseLeftButtonDown</Border.MouseLeftButtonDown>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header con gradiente y bot贸n de cierre -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="24,18" Effect="{StaticResource HeaderShadow}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#118938" Offset="0"/>
                            <GradientStop Color="#2B8E3F" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <Border Background="White" CornerRadius="6" Padding="6" Margin="0,0,16,0" Width="36" Height="36" Effect="{StaticResource SectionShadow}">
                                <TextBlock Text="" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Registrar Mantenimiento Correctivo" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Text="Registre un fallo o problema no programado" Style="{StaticResource SubHeaderTextStyle}" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Bot贸n Cerrar -->
                        <Button DockPanel.Dock="Right" Style="{StaticResource CloseButton}" Click="CancelarButton_Click" ToolTip="Cerrar (Esc)" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,-6,0,0">
                            <Grid Width="14" Height="14">
                                <Line X1="0" Y1="0" X2="14" Y2="14" Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                <Line X1="14" Y1="0" X2="0" Y2="14" Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                            </Grid>
                        </Button>
                    </DockPanel>
                </Border>

                <!-- Contenido principal -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20" Background="{StaticResource LightGrayBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                    <StackPanel>
                        <!-- Selecci贸n de Equipo/Perif茅rico -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="24" Margin="0,0,0,20" Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <StackPanel>
                                <TextBlock Text="Equipo o Perif茅rico *" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <RadioButton Content="Equipo Inform谩tico" IsChecked="{Binding EsEquipoInformatico}" 
                                                VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,24,0" FontSize="13"/>
                                    <RadioButton Content="Perif茅rico" IsChecked="{Binding EsPeriferico}" 
                                                VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"/>
                                </StackPanel>

                                <!-- ComboBox Equipos Inform谩ticos -->
                                <StackPanel Visibility="{Binding EsEquipoInformatico, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,0,0,12">
                                    <TextBlock Text="Seleccione el equipo:" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding EquiposInformaticos}" 
                                             SelectedItem="{Binding EquipoInformaticoSeleccionado}"
                                             DisplayMemberPath="Codigo"
                                             Height="36" 
                                             Background="{StaticResource SurfaceBrush}"
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             Padding="8"/>
                                    <TextBlock Text="{Binding EquipoInformaticoSeleccionado.Modelo, StringFormat='Modelo: {0}'}" 
                                               FontSize="11" Foreground="#706F6F" Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- ComboBox Perif茅ricos -->
                                <StackPanel Visibility="{Binding EsEquipoInformatico, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <TextBlock Text="Seleccione el perif茅rico:" FontWeight="Bold" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Perifericos}" 
                                             SelectedItem="{Binding PerifericoSeleccionado}"
                                             DisplayMemberPath="Codigo"
                                             Height="36"
                                             Background="{StaticResource SurfaceBrush}"
                                             Foreground="{StaticResource TextPrimaryBrush}"
                                             Padding="8"/>
                                    <TextBlock Text="{Binding PerifericoSeleccionado.Dispositivo, StringFormat='Dispositivo: {0}'}" 
                                               FontSize="11" Foreground="#706F6F" Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Fecha de Falla -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="24" Margin="0,0,0,20" Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha de Falla *" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                    <DatePicker SelectedDate="{Binding FechaFalla}" Height="36" 
                                               Background="{StaticResource SurfaceBrush}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Padding="8"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Hora Aproximada" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding HoraFalla}" Height="36" 
                                            Background="{StaticResource SurfaceBrush}"
                                            Foreground="{StaticResource TextPrimaryBrush}"
                                            Padding="8"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Descripci贸n de la Falla -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="24" Margin="0,0,0,20" Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <StackPanel>
                                <TextBlock Text="Descripci贸n de la Falla *" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding DescripcionFalla}" 
                                        AcceptsReturn="True" 
                                        TextWrapping="Wrap"
                                        MinHeight="80" MaxHeight="120"
                                        VerticalScrollBarVisibility="Auto"
                                        Background="{StaticResource SurfaceBrush}"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        Padding="8"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource BorderBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Proveedor -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="24" Margin="0,0,0,20" Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <StackPanel>
                                <TextBlock Text="Proveedor de Reparaci贸n *" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding ProveedorAsignado}" 
                                        Height="36" 
                                        Background="{StaticResource SurfaceBrush}"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        Padding="8"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource BorderBrush}"/>
                                <TextBlock Text="Nombre o contacto del proveedor que realizar谩 la reparaci贸n" 
                                           FontSize="11" Foreground="#706F6F" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Observaciones -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="24" Margin="0,0,0,20" Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <StackPanel>
                                <TextBlock Text="Observaciones Adicionales" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Observaciones}" 
                                        AcceptsReturn="True" 
                                        TextWrapping="Wrap"
                                        MinHeight="60" MaxHeight="100"
                                        VerticalScrollBarVisibility="Auto"
                                        Background="{StaticResource SurfaceBrush}"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        Padding="8"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource BorderBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Mensajes de Error -->
                        <Border Background="{StaticResource ErrorBrush}" CornerRadius="6" Padding="16" Margin="0,0,0,20" 
                                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                                Effect="{StaticResource SectionShadow}" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <TextBlock Text="{Binding ErrorMessage}" 
                                      Foreground="White"
                                      FontSize="12" TextWrapping="Wrap"/>
                        </Border>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                            <Button Content="Cancelar" Width="120" Height="40"
                                   Background="#EEEEEE" Foreground="{StaticResource TextPrimaryBrush}"
                                   BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                                   FontWeight="SemiBold" Cursor="Hand"
                                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                                   Click="CancelarButton_Click"
                                   Margin="0,0,12,0"
                                   Effect="{StaticResource SectionShadow}"/>

                            <Button Content="Registrar" Width="140" Height="40"
                                   Background="{StaticResource PrimaryBrush}" Foreground="White"
                                   BorderThickness="0"
                                   FontWeight="SemiBold" FontSize="13" Cursor="Hand"
                                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                                   Command="{Binding GuardarCommand}"
                                   Effect="{StaticResource SectionShadow}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
