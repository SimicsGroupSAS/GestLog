<UserControl x:Class="GestLog.Modules.GestionEquiposInformaticos.Views.Equipos.GestionEquiposHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Views.Equipos"
             xmlns:cronogramaViews="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Views.Cronograma"
             xmlns:historialViews="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Views.Mantenimiento"
             xmlns:mantenimientoViews="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Views.Mantenimiento"
             xmlns:perifericosViews="clr-namespace:GestLog.Modules.GestionEquiposInformaticos.Views.Perifericos"
             xmlns:converters="clr-namespace:GestLog.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100">
    
    <UserControl.Resources>
        <converters:PlanesStatsConverter x:Key="PlanesStatsConverter" />
    </UserControl.Resources>

    <Grid Background="White" Margin="10">
        <TabControl x:Name="tabEquipos" Background="#F5F5F5" BorderThickness="0" Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="18,10"/>
                    <Setter Property="Foreground" Value="#504F4E"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#E5E5E5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,1,0"
                                        Margin="2,0" CornerRadius="6,6,0,0">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                                                     HorizontalAlignment="Center" ContentSource="Header"
                                                     Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#E5E5E5"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                                        <Setter Property="Foreground" Value="#504F4E"/>
                                        <Setter Property="Panel.ZIndex" Value="1"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Equipos">
                <Border Background="#F5F5F5" Padding="0" CornerRadius="0 0 8 8">
                    <views:EquiposInformaticosView />
                </Border>
            </TabItem>            <TabItem Header="Cronograma">
                <Border Background="#F5F5F5" Padding="0" CornerRadius="0 0 8 8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>                        <cronogramaViews:CronogramaDiarioView x:Name="cronogramaView" DataContext="{Binding CronogramaVm}" /><!-- Indicador de estadísticas de planes -->
                        <DockPanel Grid.Row="1" Margin="8">
                            <!-- Contador de planes (izquierda) -->
                            <TextBlock Text="{Binding DataContext.StatusMessage, ElementName=cronogramaView}" 
                                       FontWeight="Medium" 
                                       VerticalAlignment="Center" 
                                       Foreground="#333"
                                       FontSize="12" 
                                       DockPanel.Dock="Left" />
                            
                            <!-- Leyenda (derecha) -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                <TextBlock Text="Leyenda:" FontWeight="SemiBold" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="#333" FontSize="11" />
                                <Border Background="#E3F2FD" BorderBrush="#64B5F6" BorderThickness="1" CornerRadius="2" Padding="3,1" Margin="0,0,6,0">
                                    <TextBlock Text="Pendiente" FontSize="9" />
                                </Border>
                                <Border Background="#FFECB3" BorderBrush="#FFA000" BorderThickness="1" CornerRadius="2" Padding="3,1" Margin="0,0,6,0">
                                    <TextBlock Text="Atrasado" FontSize="9" />
                                </Border>
                                <Border Background="#C8E6C9" BorderBrush="#2E7D32" BorderThickness="1" CornerRadius="2" Padding="3,1">
                                    <TextBlock Text="Ejecutado" FontSize="9" />
                                </Border>
                            </StackPanel>
                        </DockPanel>
                    </Grid>
                </Border>
            </TabItem>            <TabItem Header="Historial">
                <Border Background="#F5F5F5" Padding="0" CornerRadius="0 0 8 8">
                    <historialViews:HistorialEjecucionesView DataContext="{Binding HistorialVm}" />
                </Border>
            </TabItem>

            <!-- ✅ NUEVO: Tab para Mantenimientos Correctivos -->
            <TabItem Header="Mantenimientos Correctivos">
                <Border Background="#F5F5F5" Padding="0" CornerRadius="0 0 8 8">
                    <mantenimientoViews:MantenimientosCorrectivosView />
                </Border>
            </TabItem>

            <TabItem Header="Periféricos">
                <Border Background="#F5F5F5" Padding="0" CornerRadius="0 0 8 8">
                    <perifericosViews:PerifericosView DataContext="{Binding PerifericosVm}" />
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
