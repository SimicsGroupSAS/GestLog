<Window x:Class="GestLog.Modules.GestionMantenimientos.Views.Cronograma.SemanaDetalle.SemanaDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:GestLog.Converters"
        Title="Detalle de la Semana" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">    <Window.Resources>
        <converters:BooleanToStatusTextConverter x:Key="BooleanToStatusTextConverter" TrueText="Realizado" FalseText="Pendiente" />
        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter" />
        <!-- Badge de Tipo de Mantenimiento -->
        <Style x:Key="BadgePreventivo" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <Style x:Key="BadgeCorrectivo" TargetType="Border">
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>        <!-- Estilos visuales -->
        <Style x:Key="EquipoCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,0,0,0"/>
        </Style>
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#504F4E" BlurRadius="8" ShadowDepth="2" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#2B8E3F" BlurRadius="6" ShadowDepth="1" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B8E3F"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#118938" BlurRadius="10" ShadowDepth="2" Opacity="0.28"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>    <Grid MouseLeftButtonDown="Overlay_MouseLeftButtonDown" Background="#80000000">
        <Border Style="{StaticResource CardBorderStyle}" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="Panel_MouseLeftButtonDown" Width="Auto" MinWidth="800" MaxWidth="1400">
            <StackPanel>
                <TextBlock Text="{Binding Titulo}" FontSize="18" FontWeight="Bold" Foreground="#118938" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <TextBlock Text="Semana:" FontSize="13" Foreground="#504F4E" FontWeight="SemiBold" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding RangoFechas}" FontSize="13" Foreground="#504F4E"/>
                </StackPanel>
                <Separator Margin="0,0,0,8"/>
                <TextBlock Text="Estados de Mantenimiento" FontSize="15" FontWeight="SemiBold" Foreground="#2B8E3F" Margin="0,10,0,6"/>
                <DataGrid ItemsSource="{Binding EstadosMantenimientos}" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,6" Background="#FAFAFA" RowBackground="White" AlternatingRowBackground="#F5F5F5" HeadersVisibility="Column" GridLinesVisibility="None" 
                          CanUserResizeColumns="True" CanUserResizeRows="False" CanUserSortColumns="True" 
                          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" 
                          MinWidth="750"
                          SnapsToDevicePixels="True" UseLayoutRounding="True">                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Equipo" Binding="{Binding NombreEquipo}" MinWidth="120" Width="*" CellStyle="{StaticResource EquipoCellStyle}"/>
                        <DataGridTextColumn Header="CÃ³digo" Binding="{Binding CodigoEquipo}" MinWidth="70" Width="80"/>
                        <DataGridTextColumn Header="Sede" Binding="{Binding Sede, Converter={StaticResource EnumToDescriptionConverter}}" MinWidth="80" Width="90"/>
                        <DataGridTemplateColumn Header="Tipo" MinWidth="110" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Border x:Name="BadgePreventivo" Style="{StaticResource BadgePreventivo}" Visibility="Collapsed">
                                            <TextBlock Text="ðŸ”§ Preventivo" FontSize="12" FontWeight="SemiBold" Foreground="#1976D2"/>
                                        </Border>
                                        <Border x:Name="BadgeCorrectivo" Style="{StaticResource BadgeCorrectivo}" Visibility="Collapsed">
                                            <TextBlock Text="âš ï¸ Correctivo" FontSize="12" FontWeight="SemiBold" Foreground="#E65100"/>
                                        </Border>
                                    </StackPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Seguimiento.TipoMtno}" Value="Preventivo">
                                            <Setter TargetName="BadgePreventivo" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Seguimiento.TipoMtno}" Value="Correctivo">
                                            <Setter TargetName="BadgeCorrectivo" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Frecuencia" Binding="{Binding Frecuencia}" MinWidth="90" Width="100"/>
                        <DataGridTemplateColumn Header="Estado" MinWidth="110" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Estado, Converter={StaticResource EnumToDescriptionConverter}}" FontWeight="SemiBold" FontSize="13"/>
                                        <TextBlock Margin="6,0,0,0" FontSize="14">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value=""/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="RealizadoEnTiempo">
                                                            <Setter Property="Text" Value="âœ…"/>
                                                            <Setter Property="Foreground" Value="#118938"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="RealizadoFueraDeTiempo">
                                                            <Setter Property="Text" Value="â±ï¸"/>
                                                            <Setter Property="Foreground" Value="#2B8E3F"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Atrasado">
                                                            <Setter Property="Text" Value="âš ï¸"/>
                                                            <Setter Property="Foreground" Value="#C0392B"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="NoRealizado">
                                                            <Setter Property="Text" Value="âŒ"/>
                                                            <Setter Property="Foreground" Value="#C0392B"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                                            <Setter Property="Text" Value="â¸ï¸"/>
                                                            <Setter Property="Foreground" Value="#706F6F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="AcciÃ³n" MinWidth="95" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Registrar"
                                            Command="{Binding DataContext.RegistrarMantenimientoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Padding="6,2"
                                            FontSize="12"
                                            Visibility="{Binding PuedeRegistrar, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="No hay estados de mantenimiento para esta semana." 
                           Foreground="#C0392B" FontWeight="SemiBold" FontSize="12" 
                           HorizontalAlignment="Center" Margin="0,8,0,8"
                           Visibility="{Binding EstadosMantenimientos.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}"/>
                <TextBlock Text="{Binding MensajeUsuario}" Foreground="Red" FontWeight="SemiBold" Margin="0,0,0,6"
                           Visibility="{Binding MensajeUsuario, Converter={StaticResource StringToVisibilityConverter}}"/>
                <Separator Margin="0,8,0,8"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cerrar" Width="100" IsCancel="True" Click="OnCerrar_Click" Style="{StaticResource PrimaryButtonStyle}" FontSize="16" FontFamily="Segoe UI" FontWeight="Bold" SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>



