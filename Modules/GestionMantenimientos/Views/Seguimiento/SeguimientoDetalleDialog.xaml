<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="GestLog.Modules.GestionMantenimientos.Views.Seguimiento.SeguimientoDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:GestLog.Converters"
        Title="Detalle del Seguimiento" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
        <converters:DecimalToCopCurrencyConverter x:Key="DecimalToCopCurrencyConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Estilos -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#118938"/>
        </Style>
        
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#118938"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#706F6F"/>
            <Setter Property="Margin" Value="0,0,8,2"/>
        </Style>
        
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#504F4E"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
          <Style x:Key="SeparatorStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
        </Style>
          <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#118938"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="8,4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0F7530"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botÃ³n Editar (Azul/Amarillo) -->
        <Style x:Key="EditarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="12,6"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>        <!-- Estilo para botÃ³n Eliminar (Rojo) -->
        <Style x:Key="EliminarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="12,6"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para TextBox editable -->
        <Style x:Key="EditableTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#504F4E"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalScrollBarVisibility="Auto"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#118938"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources><!-- Grid de overlay semi-transparente que cubre toda la pantalla -->
    <Grid x:Name="OverlayGrid" 
          MouseLeftButtonDown="Overlay_MouseLeftButtonDown" 
          Background="#80000000"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        
        <!-- Border con la ventana modal centrada -->        
        <Border x:Name="ModalPanel"
                Width="700" 
                Height="Auto" 
                MaxHeight="850" 
                Background="White" 
                CornerRadius="12" 
                Padding="0" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="40" 
                BorderThickness="0"
                MouseLeftButtonDown="Panel_MouseLeftButtonDown">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header con gradiente y estado visual -->
                <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="24,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#118938" Offset="0"/>
                            <GradientStop Color="#0F7530" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Detalle del Seguimiento" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Seguimiento.Codigo, StringFormat='Equipo: {0}'}" 
                                       FontSize="12" 
                                       Foreground="#E0E0E0"/>
                        </StackPanel>
                        
                        <!-- Badge de Estado -->
                        <Border Grid.Column="1" 
                                CornerRadius="8" 
                                Padding="12,6"
                                Background="White"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding EstadoDisplayName}" 
                                       FontSize="13" 
                                       FontWeight="Bold" 
                                       Foreground="#118938"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Contenido scrolleable -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel>                        <!-- SECCIÃ“N: EQUIPO -->
                        <TextBlock Text="ðŸ“¦ InformaciÃ³n del Equipo" Style="{StaticResource SectionTitleStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CÃ³digo" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Seguimiento.Codigo}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Nombre" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Seguimiento.Nombre}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Sede" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding SedeDisplayName}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tipo de Mantenimiento" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding TipoMantenimientoDisplayName}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>                        <Border Style="{StaticResource SeparatorStyle}"/>                        <!-- SECCIÃ“N: SEGUIMIENTO -->
                        <TextBlock Text="ðŸ“‹ InformaciÃ³n del Seguimiento" Style="{StaticResource SectionTitleStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Estado" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding EstadoDisplayName}" 
                                           Style="{StaticResource ValueStyle}"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Responsable" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Seguimiento.Responsable}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Semana / AÃ±o" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Seguimiento.SemanaTexto}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Border Style="{StaticResource SeparatorStyle}"/>

                        <!-- SECCIÃ“N: FECHAS -->
                        <TextBlock Text="ðŸ“… Fechas" Style="{StaticResource SectionTitleStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Fecha de Registro" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Seguimiento.FechaRegistro, StringFormat='dd/MM/yyyy HH:mm'}" 
                                           Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Fecha de RealizaciÃ³n" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Seguimiento.FechaRealizacion, StringFormat='dd/MM/yyyy'}" 
                                           Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Border Style="{StaticResource SeparatorStyle}"/>                        <!-- SECCIÃ“N: DESCRIPCIÃ“N Y OBSERVACIONES -->
                        <TextBlock Text="ðŸ“ DescripciÃ³n y Observaciones" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <!-- DescripciÃ³n: Lectura -->
                        <StackPanel Margin="0,0,0,8" Visibility="{Binding EnModoEdicion, Converter={StaticResource InverseBooleanConverter}}">
                            <TextBlock Text="DescripciÃ³n" Style="{StaticResource LabelStyle}"/>
                            <Border Background="#FAFAFA" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8">
                                <TextBlock Text="{Binding Seguimiento.Descripcion}" 
                                           Style="{StaticResource ValueStyle}"
                                           MinHeight="60"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- DescripciÃ³n: EdiciÃ³n -->
                        <StackPanel Margin="0,0,0,8" Visibility="{Binding EnModoEdicion, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="DescripciÃ³n" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding DescripcionEditable}" 
                                     Style="{StaticResource EditableTextBoxStyle}"
                                     MinHeight="60"
                                     MaxHeight="120"/>
                        </StackPanel>

                        <!-- Observaciones: Lectura -->
                        <StackPanel Visibility="{Binding EnModoEdicion, Converter={StaticResource InverseBooleanConverter}}">
                            <TextBlock Text="Observaciones" Style="{StaticResource LabelStyle}"/>
                            <Border Background="#FAFAFA" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8">
                                <TextBlock Text="{Binding Seguimiento.Observaciones}" 
                                           Style="{StaticResource ValueStyle}"
                                           MinHeight="50"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Observaciones: EdiciÃ³n -->
                        <StackPanel Visibility="{Binding EnModoEdicion, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Observaciones" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding ObservacionesEditable}" 
                                     Style="{StaticResource EditableTextBoxStyle}"
                                     MinHeight="50"
                                     MaxHeight="100"/>
                        </StackPanel>                        <Border Style="{StaticResource SeparatorStyle}"/>

                        <!-- SECCIÃ“N: COSTOS -->
                        <TextBlock Text="ðŸ’° Costo" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <!-- Costo: Lectura -->
                        <TextBlock Text="{Binding Seguimiento.Costo, Converter={StaticResource DecimalToCopCurrencyConverter}}" 
                                   Style="{StaticResource ValueStyle}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Visibility="{Binding EnModoEdicion, Converter={StaticResource InverseBooleanConverter}}"/>
                        
                        <!-- Costo: EdiciÃ³n -->
                        <TextBox Text="{Binding CostoEditable}" 
                                 Style="{StaticResource EditableTextBoxStyle}"
                                 Height="36"
                                 Visibility="{Binding EnModoEdicion, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>                <!-- Footer con botones -->                <Border Grid.Row="2" 
                        Padding="24,16" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0"
                        Background="#FAFAFA">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>                        <!-- Mensajes de deshabilitaciÃ³n (solo en modo lectura) -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding MensajeDeshabilitacion}"
                                   VerticalAlignment="Center"
                                   Foreground="#C0392B"
                                   FontSize="11"
                                   Visibility="{Binding MensajeDeshabilitacion, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   IsHitTestVisible="False"/>

                        <!-- Botones: Modo Lectura -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding EnModoEdicion, Converter={StaticResource InverseBooleanConverter}}">
                            <!-- BotÃ³n Editar -->
                            <Button Content="âœï¸ Editar" 
                                    Width="Auto"
                                    Height="36"
                                    Padding="12,6"
                                    Margin="0,0,8,0"
                                    Name="EditarButton"
                                    Click="Editar_Click"
                                    Style="{StaticResource EditarButtonStyle}"
                                    IsEnabled="{Binding PuedeEditarOEliminar}"
                                    Cursor="Hand"
                                    ToolTip="Editar este seguimiento"/>

                            <!-- BotÃ³n Eliminar -->
                            <Button Content="ðŸ—‘ï¸ Eliminar" 
                                    Width="Auto"
                                    Height="36"
                                    Padding="12,6"
                                    Margin="0,0,8,0"
                                    Name="EliminarButton"
                                    Click="Eliminar_Click"
                                    Style="{StaticResource EliminarButtonStyle}"
                                    IsEnabled="{Binding PuedeEditarOEliminar}"
                                    Cursor="Hand"
                                    ToolTip="Eliminar este seguimiento"/>

                            <!-- BotÃ³n Cerrar -->
                            <Button Content="âœ• Cerrar" 
                                    Width="Auto"
                                    Height="36"
                                    Padding="12,6"
                                    Click="Cerrar_Click"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <!-- Botones: Modo EdiciÃ³n -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding EnModoEdicion, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <!-- BotÃ³n Guardar -->
                            <Button Content="ðŸ’¾ Guardar" 
                                    Width="Auto"
                                    Height="36"
                                    Padding="12,6"
                                    Margin="0,0,8,0"
                                    Name="GuardarButton"
                                    Click="Guardar_Click"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Cursor="Hand"
                                    ToolTip="Guardar cambios"/>

                            <!-- BotÃ³n Cancelar -->
                            <Button Content="âŒ Cancelar" 
                                    Width="Auto"
                                    Height="36"
                                    Padding="12,6"
                                    Name="CancelarButton"
                                    Click="Cancelar_Click"
                                    Style="{StaticResource EliminarButtonStyle}"
                                    Cursor="Hand"
                                    ToolTip="Descartar cambios"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
