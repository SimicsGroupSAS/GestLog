                    </StackPanel>
                </StackPanel>
                <!-- Cards Grid -->
                <UniformGrid Columns="4" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <!-- Personas Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="12">
                        <StackPanel>
                            <TextBlock Text="游븸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Personas" FontFamily="Segoe UI" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#504F4E" Margin="0,0,0,10"/>
                            <TextBlock Text="Registrar, editar y consultar personas." FontFamily="Segoe UI" FontSize="14" Foreground="#706F6F" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Gestionar Personas" Command="{Binding AbrirPersonasCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="180"/>
                        </StackPanel>
                    </Border>
                    <!-- Usuarios Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="12">
                        <StackPanel>
                            <TextBlock Text="游녻" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Usuarios" FontFamily="Segoe UI" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#504F4E" Margin="0,0,0,10"/>
                            <TextBlock Text="Gesti칩n de cuentas de usuario y autenticaci칩n." FontFamily="Segoe UI" FontSize="14" Foreground="#706F6F" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Gestionar Usuarios" Command="{Binding AbrirUsuariosCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="180"/>
                        </StackPanel>
                    </Border>
                    <!-- Cat치logos Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="12">
                        <StackPanel>
                            <TextBlock Text="游늬" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Cat치logos" FontFamily="Segoe UI" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#504F4E" Margin="0,0,0,10"/>
                            <TextBlock Text="Cargos, tipos de documento, roles, permisos." FontFamily="Segoe UI" FontSize="14" Foreground="#706F6F" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Gestionar Cat치logos" Command="{Binding AbrirCatalogosCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="180"/>
                        </StackPanel>
                    </Border>
                    <!-- Auditor칤a Card -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="12">
                        <StackPanel>
                            <TextBlock Text="游닇" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Auditor칤a" FontFamily="Segoe UI" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#504F4E" Margin="0,0,0,10"/>
                            <TextBlock Text="Historial de cambios y acciones relevantes." FontFamily="Segoe UI" FontSize="14" Foreground="#706F6F" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>
                            <Button Content="Ver Auditor칤a" Command="{Binding AbrirAuditoriaCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="180"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
