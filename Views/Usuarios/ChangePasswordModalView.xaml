<UserControl
    x:Class="GestLog.Views.Usuarios.ChangePasswordModalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    
    <Grid Background="#80000000" Focusable="True" KeyDown="Grid_KeyDown">
        <Border
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="450"
            Background="White"
            CornerRadius="8">            <DockPanel LastChildFill="True">
            
                <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#118938" CornerRadius="8,8,0,0" Padding="20">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Text="🔐 Cambio de Contraseña Obligatorio"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="Por seguridad, debe cambiar su contraseña en el primer acceso"
                            FontSize="12"
                            Foreground="#DDD"
                            Margin="0,8,0,0"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                
                <!-- Footer -->
                <Border DockPanel.Dock="Bottom" BorderThickness="0,1,0,0" BorderBrush="#EEE" Padding="25,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button
                            Content="Cancelar"
                            Padding="15,8"
                            FontSize="12"
                            Foreground="#666"
                            Background="Transparent"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Cursor="Hand" />
                        
                        <Button
                            Content="Cambiar Contraseña"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#118938"
                            BorderThickness="0"
                            Command="{Binding ChangePasswordCommand}"
                            Cursor="Hand"
                            IsEnabled="{Binding IsNotLoading}" />
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <StackPanel Orientation="Vertical" Margin="25">
                    
                    <!-- Current Password -->
                    <TextBlock
                        Text="Contraseña Actual"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#333" />
                    <PasswordBox
                        x:Name="CurrentPasswordBox"
                        Padding="12,10"
                        FontSize="13"
                        Background="#F5F5F5"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Margin="0,0,0,15"
                        Foreground="#333" />
                      <!-- New Password -->
                    <TextBlock
                        Text="Nueva Contraseña"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#333" />
                    <PasswordBox
                        x:Name="NewPasswordBox"
                        Padding="12,10"
                        FontSize="13"
                        Background="#F5F5F5"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Margin="0,0,0,5"
                        Foreground="#333" />
                    <TextBlock
                        Text="• Mínimo 4 caracteres"
                        FontSize="11"
                        Foreground="#666"
                        Margin="0,0,0,15" />
                    
                    <!-- Confirm Password -->
                    <TextBlock
                        Text="Confirmar Contraseña"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#333" />
                    <PasswordBox
                        x:Name="ConfirmPasswordBox"
                        Padding="12,10"
                        FontSize="13"
                        Background="#F5F5F5"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Margin="0,0,0,15"
                        Foreground="#333" />
                    
                    <!-- Error Message -->
                    <TextBlock
                        x:Name="ErrorMessageBlock"
                        Text="{Binding ErrorMessage}"
                        FontSize="11"
                        Foreground="#DC3545"
                        TextWrapping="Wrap"
                        Visibility="{Binding ShowError, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="#FFE5E5"
                        Padding="10"
                        Margin="0,0,0,10" />
                    
                    <!-- Success Message -->
                    <TextBlock
                        x:Name="SuccessMessageBlock"
                        Text="✅ Contraseña actualizada exitosamente"
                        FontSize="11"
                        Foreground="#28A745"
                        TextWrapping="Wrap"
                        Visibility="{Binding ShowSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="#D4EDDA"
                        Padding="10" />
                    
                </StackPanel>
                
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
