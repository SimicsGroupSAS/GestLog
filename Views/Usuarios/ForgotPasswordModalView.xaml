<UserControl
    x:Class="GestLog.Views.Usuarios.ForgotPasswordModalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    
    <Grid Background="#80000000" Focusable="True" KeyDown="Grid_KeyDown">
        <Border
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="400"
            Background="White"
            CornerRadius="8">
            <DockPanel LastChildFill="True">
                
                <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#118938" CornerRadius="8,8,0,0" Padding="20">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Text="🔑 Recuperar Contraseña"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Text="Ingrese su nombre de usuario o correo para recibir una contraseña temporal"
                            FontSize="12"
                            Foreground="#DDD"
                            Margin="0,8,0,0"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                
                <!-- Footer -->
                <Border DockPanel.Dock="Bottom" BorderThickness="0,1,0,0" BorderBrush="#EEE" Padding="25,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button
                            Content="Cancelar"
                            Padding="15,8"
                            FontSize="12"
                            Foreground="#666"
                            Background="Transparent"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Cursor="Hand" />
                        
                        <Button
                            Content="Enviar Email"
                            Padding="15,8"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Background="#118938"
                            BorderThickness="0"
                            Command="{Binding SendResetEmailCommand}"
                            Cursor="Hand"
                            IsEnabled="{Binding IsNotLoading}" />
                    </StackPanel>
                </Border>
                
                <!-- Content -->
                <StackPanel Orientation="Vertical" Margin="25">
                    
                    <!-- Username or Email -->
                    <TextBlock
                        Text="Nombre de Usuario o Correo"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#333" />
                    <TextBox
                        x:Name="UsernameOrEmailBox"
                        Text="{Binding UsernameOrEmail, UpdateSourceTrigger=PropertyChanged}"
                        Padding="12,10"
                        FontSize="13"
                        Background="#F5F5F5"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        Margin="0,0,0,15"
                        Foreground="#333" />
                    
                    <!-- Info Message -->
                    <TextBlock
                        Text="ℹ️ Se enviará una contraseña temporal a su correo registrado. Podrá cambiarla después de iniciar sesión."
                        FontSize="11"
                        Foreground="#555"
                        TextWrapping="Wrap"
                        Background="#E7F3FF"
                        Padding="10"
                        Margin="0,0,0,15" />
                    
                    <!-- Error Message -->
                    <TextBlock
                        x:Name="ErrorMessageBlock"
                        Text="{Binding ErrorMessage}"
                        FontSize="11"
                        Foreground="#DC3545"
                        TextWrapping="Wrap"
                        Visibility="{Binding ShowError, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="#FFE5E5"
                        Padding="10"
                        Margin="0,0,0,10" />
                    
                    <!-- Success Message -->
                    <TextBlock
                        x:Name="SuccessMessageBlock"
                        Text="{Binding SuccessMessage}"
                        FontSize="11"
                        Foreground="#28A745"
                        TextWrapping="Wrap"
                        Visibility="{Binding ShowSuccess, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="#D4EDDA"
                        Padding="10" />
                      </StackPanel>
                
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
