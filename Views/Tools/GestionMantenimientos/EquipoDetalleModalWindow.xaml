<Window x:Class="GestLog.Views.Tools.GestionMantenimientos.EquipoDetalleModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:converters="clr-namespace:GestLog.Converters"
        Title="Detalle del Equipo" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        
        <DropShadowEffect x:Key="WindowShadow" Color="#504F4E" Direction="315" ShadowDepth="4" Opacity="0.08" BlurRadius="8" RenderingBias="Quality"/>
        <DropShadowEffect x:Key="SectionShadow" Color="#9D9D9C" Direction="270" ShadowDepth="1" Opacity="0.03" BlurRadius="3" RenderingBias="Quality"/>
        <DropShadowEffect x:Key="HeaderShadow" Color="#0F7530" Direction="270" ShadowDepth="1" Opacity="0.04" BlurRadius="2" RenderingBias="Quality"/>
        
        <SolidColorBrush x:Key="PrimaryBrush" Color="#118938"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#2B8E3F"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#504F4E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0F7530"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="BorderLightBrush" Color="#EDF2F7"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#504F4E"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#706F6F"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#9D9D9C"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="#FAFBFC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#C0392B"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F9B233"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        
        <!-- Opciones para registros por pÃ¡gina -->
        <x:Array x:Key="registrosPorPaginaItems" Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:Int32>5</sys:Int32>
            <sys:Int32>10</sys:Int32>
            <sys:Int32>15</sys:Int32>
            <sys:Int32>20</sys:Int32>
        </x:Array>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="Margin" Value="0,0,8,4"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>
        
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00000015" Direction="270" ShadowDepth="1" BlurRadius="2" Opacity="0.15" RenderingBias="Quality"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedEquipo.Estado}" Value="Activo">
                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedEquipo.Estado}" Value="Inactivo">
                    <Setter Property="Background" Value="{StaticResource TextMutedBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedEquipo.Estado}" Value="EnMantenimiento">
                    <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedEquipo.Estado}" Value="EnReparacion">
                    <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedEquipo.Estado}" Value="DadoDeBaja">
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatusText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="32,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#29FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFFFFF15"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DangerActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="28,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E74C3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A93226"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CancelActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="28,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E74C3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A93226"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid MouseLeftButtonDown="Overlay_MouseLeftButtonDown" Background="#80000000">
        <Border Width="720" MaxHeight="900" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="0" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" BorderThickness="1"
                BorderBrush="{StaticResource BorderBrush}" Effect="{StaticResource WindowShadow}"
                MouseLeftButtonDown="Panel_MouseLeftButtonDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" CornerRadius="8,8,0,0" Padding="24,14" Effect="{StaticResource HeaderShadow}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#118938" Offset="0"/>
                            <GradientStop Color="#2B8E3F" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <DockPanel LastChildFill="False">
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <Border Background="White" CornerRadius="6" Padding="6" Margin="0,0,16,0" Width="36" Height="36">
                                <TextBlock Text="ðŸ”§" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Detalle del Equipo" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Text="InformaciÃ³n completa del equipo y sus detalles" Style="{StaticResource SubHeaderTextStyle}" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        <Button x:Name="CloseButton" DockPanel.Dock="Right" Style="{StaticResource CloseButton}" 
                                Click="CloseButton_Click" ToolTip="Cerrar (Esc)" Margin="0,-6,-6,0">
                            <Grid Width="14" Height="14">
                                <Line X1="0" Y1="0" X2="14" Y2="14" Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                <Line X1="14" Y1="0" X2="0" Y2="14" Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                            </Grid>
                        </Button>
                    </DockPanel>
                </Border>
                
                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="18,12" Background="{StaticResource LightGrayBrush}">
                    <StackPanel>
                        <!-- InformaciÃ³n General -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="18" Margin="0,0,0,12" 
                                Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="CÃ³digo:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEquipo.Codigo}" Style="{StaticResource ValueTextStyle}" FontWeight="SemiBold"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEquipo.Nombre}" Style="{StaticResource ValueTextStyle}" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Marca:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedEquipo.Marca}" Style="{StaticResource ValueTextStyle}"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="ClasificaciÃ³n:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEquipo.Clasificacion}" Style="{StaticResource ValueTextStyle}"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Comprado a:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedEquipo.CompradoA}" Style="{StaticResource ValueTextStyle}"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Estado:" Style="{StaticResource LabelTextStyle}"/>
                                <Border Grid.Row="5" Grid.Column="1" Style="{StaticResource StatusBadge}">
                                    <TextBlock Text="{Binding SelectedEquipo.Estado}" Style="{StaticResource StatusText}"/>
                                </Border>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Sede:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedEquipo.Sede}" Style="{StaticResource ValueTextStyle}"/>
                                
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Frec. Mtto:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SelectedEquipo.FrecuenciaMtto}" Style="{StaticResource ValueTextStyle}"/>
                                
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="Precio:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding SelectedEquipo.Precio, StringFormat='C0'}" Style="{StaticResource ValueTextStyle}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Fechas -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="18" Margin="0,0,0,12" 
                                Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Fecha Compra:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEquipo.FechaCompra, StringFormat='dd/MM/yyyy'}" Style="{StaticResource ValueTextStyle}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Fecha Baja:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEquipo.FechaBaja, StringFormat='dd/MM/yyyy'}" Style="{StaticResource ValueTextStyle}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Observaciones -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="18" Margin="0,0,0,12" 
                                Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}">
                            <StackPanel>
                                <TextBlock Text="Observaciones" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,12"/>
                                <TextBlock Text="{Binding SelectedEquipo.Observaciones}" Style="{StaticResource ValueTextStyle}" TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                          <!-- Historial de Mantenimientos -->
                        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="18" Margin="0,0,0,12" 
                                Effect="{StaticResource SectionShadow}" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ðŸ“‹ Historial de Mantenimientos" Style="{StaticResource SectionTitleStyle}"/>
                                    <Button Grid.Column="1" Content="ðŸ“¥ Exportar a Excel" 
                                            Command="{Binding ExportarHojaVidaEquipoCommand}"
                                            Style="{StaticResource PrimaryActionButtonStyle}"
                                            Padding="16,8" FontSize="11" MinHeight="32"
                                            ToolTip="Exportar toda la hoja de vida del equipo a Excel"/>
                                </Grid>
                                
                                <ItemsControl ItemsSource="{Binding HistorialMantenimientosVisibles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="6" BorderThickness="1" Padding="12" Margin="0,0,0,10"
                                                    BorderBrush="{StaticResource BorderLightBrush}" Background="{StaticResource SurfaceElevatedBrush}">
                                                <StackPanel>
                                                    <!-- Tipo y DescripciÃ³n -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding TipoMtno}" FontWeight="SemiBold" FontSize="12" 
                                                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding Descripcion}" FontSize="12" FontWeight="Medium"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Estado -->
                                                    <Border CornerRadius="4" Padding="8,4" Margin="0,0,0,8" HorizontalAlignment="Left" Background="{StaticResource SuccessBrush}">
                                                        <TextBlock Text="{Binding Estado}" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                                                    </Border>
                                                    
                                                    <!-- Responsable y Costo -->
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="ðŸ‘¤ " Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,3,0"/>
                                                            <TextBlock Text="{Binding Responsable}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="1" Text="{Binding Costo, StringFormat='${0:N0}'}" 
                                                                   FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    </Grid>
                                                    
                                                    <!-- Fechas -->
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Orientation="Vertical">
                                                            <TextBlock Text="Programado:" FontSize="10" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,2"/>
                                                            <TextBlock Text="{Binding SemanaTexto}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                                                            <TextBlock Text="Realizado:" FontSize="10" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,2"/>
                                                            <TextBlock Text="{Binding FechaRegistro, StringFormat='dd/MM/yyyy'}" 
                                                                       FontSize="11" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                    
                                                    <!-- Observaciones -->
                                                    <TextBlock Text="{Binding Observaciones}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" 
                                                               TextWrapping="Wrap">
                                                        <TextBlock.Visibility>
                                                            <Binding Path="Observaciones" Converter="{StaticResource NullToVisibilityConverter}"/>
                                                        </TextBlock.Visibility>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Mensaje sin mantenimientos -->
                                <TextBlock Text="No hay mantenimientos realizados aÃºn." FontSize="12" Foreground="{StaticResource TextMutedBrush}" 
                                           FontStyle="Italic" Margin="0,12,0,0">
                                    <TextBlock.Visibility>
                                        <Binding Path="SelectedEquipo.MantenimientosRealizados.Count" Converter="{StaticResource CountToVisibilityConverter}"/>
                                    </TextBlock.Visibility>
                                </TextBlock>
                                
                                <!-- Controles de PaginaciÃ³n -->
                                <Border Background="{StaticResource SurfaceElevatedBrush}" CornerRadius="6" Padding="12" Margin="0,16,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>                                        <!-- BotÃ³n Anterior -->
                                        <Button Grid.Column="0" Content="â—„ Anterior" 
                                                Command="{Binding HistorialPaginaAnteriorCommand}"
                                                Background="{StaticResource PrimaryBrush}"
                                                Foreground="White"
                                                Padding="12,6" 
                                                FontSize="11"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HistorialPaginaActual}" Value="1">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- InformaciÃ³n de pÃ¡gina -->
                                        <TextBlock Grid.Column="1">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="PÃ¡gina {0:D0} de {1:D0}">
                                                    <Binding Path="HistorialPaginaActual"/>
                                                    <Binding Path="HistorialTotalPaginas"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                    <Setter Property="FontSize" Value="11"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Margin" Value="8,0"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        
                                        <!-- Registros por pÃ¡gina -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
