<Window x:Class="GestLog.Views.Tools.GestionIdentidadCatalogos.Catalogo.Roles.EditarRolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Editar Rol" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#FAFAFA">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="StringToVisibilityConverter" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="ðŸ›¡ï¸" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="Editar Rol" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" Foreground="#504F4E"/>
                    <TextBlock Text="Modifique la informaciÃ³n del rol y sus permisos asignados" FontFamily="Segoe UI" FontSize="14" Foreground="#706F6F"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- InformaciÃ³n bÃ¡sica del rol -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,16" Effect="{DynamicResource DropShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="InformaciÃ³n del Rol" FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold" Foreground="#504F4E" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Nombre *" FontWeight="SemiBold" FontSize="14" Foreground="#706F6F" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="16" Margin="0,0,0,12" 
                                 Padding="8" Height="36"
                                 ToolTip="Nombre del rol"/>
                        
                        <TextBlock Text="DescripciÃ³n" FontWeight="SemiBold" FontSize="14" Foreground="#706F6F" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="16" Margin="0,0,0,12" 
                                 Height="80" TextWrapping="Wrap" 
                                 Padding="8"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"
                                 ToolTip="DescripciÃ³n del rol"/>
                    </StackPanel>
                </Border>

                <!-- AsignaciÃ³n de permisos -->
                <Border Background="White" CornerRadius="8" Padding="20" Effect="{DynamicResource DropShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="Permisos del Rol" FontFamily="Segoe UI" FontSize="16" FontWeight="SemiBold" Foreground="#504F4E" Margin="0,0,0,12"/>
                        
                        <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PermisosPorModulo}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" CornerRadius="6" Margin="0,0,0,8" Padding="12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Modulo}" FontWeight="Bold" FontSize="15" Foreground="#504F4E" Margin="0,0,0,8"/>
                                                <ItemsControl ItemsSource="{Binding Permisos}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <CheckBox Content="{Binding Nombre}" 
                                                                      IsChecked="{Binding EstaSeleccionado}"
                                                                      FontSize="14" 
                                                                      Margin="16,0,0,4"
                                                                      ToolTip="{Binding Descripcion}"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Mensaje de validaciÃ³n -->
        <TextBlock Grid.Row="2" Text="{Binding MensajeValidacion}" 
                   Foreground="#C0392B" FontWeight="SemiBold" FontSize="14" 
                   Margin="0,12,0,0" HorizontalAlignment="Left"
                   Style="{StaticResource StringToVisibilityConverter}"/>

        <!-- Botones -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
              <Button Grid.Column="1" Content="Cancelar" 
                    Click="BtnCancelar_Click"
                    Background="#706F6F" Foreground="White" 
                    Padding="16,8" Margin="0,0,8,0" MinWidth="100"
                    FontWeight="SemiBold" FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"/>
            
            <Button Grid.Column="2" Content="Guardar Cambios" 
                    Click="BtnGuardar_Click"
                    Background="#118938" Foreground="White" 
                    Padding="16,8" MinWidth="120"
                    FontWeight="SemiBold" FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
