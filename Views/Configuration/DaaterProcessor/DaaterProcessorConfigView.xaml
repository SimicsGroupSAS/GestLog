                        <CheckBox Grid.Row="3" Grid.ColumnSpan="2" 
                                  Content="Crear backup antes de procesar" 
                                  IsChecked="{Binding CreateBackupBeforeProcessing}" 
                                  Margin="0,5"/>

                        <!-- Reporte de progreso -->
                        <CheckBox Grid.Row="4" Grid.ColumnSpan="2" 
                                  Content="Habilitar reporte de progreso" 
                                  IsChecked="{Binding EnableProgressReporting}" 
                                  Margin="0,5"/>                        <!-- RecuperaciÃ³n de errores -->
                        <CheckBox Grid.Row="5" Grid.ColumnSpan="2" 
                                  Content="Habilitar recuperaciÃ³n de errores" 
                                  IsChecked="{Binding EnableErrorRecovery}" 
                                  Margin="0,5"/>
                    </Grid>
                </GroupBox>                <!-- ValidaciÃ³n de Duplicados -->
                <GroupBox Header="ðŸ” ValidaciÃ³n de Duplicados" 
                          Style="{StaticResource GreenGroupBoxStyle}"
                          Margin="0,0,0,15" 
                          Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Habilitar validaciÃ³n de duplicados -->
                        <CheckBox Grid.Row="0" Grid.ColumnSpan="2" 
                                  Content="ðŸ” Habilitar detecciÃ³n de registros duplicados" 
                                  IsChecked="{Binding EnableDuplicateValidation}" 
                                  Margin="0,5"/>                        <!-- Modo de manejo de duplicados -->
                        <Label Grid.Row="1" Grid.Column="0" 
                               Content="AcciÃ³n con duplicados:" 
                               VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  SelectedIndex="{Binding DuplicateHandlingModeIndex}" 
                                  IsEnabled="{Binding EnableDuplicateValidation}"
                                  Margin="0,5">
                            <ComboBoxItem Content="ðŸš« Omitir duplicados (conservar primero)"/>
                            <ComboBoxItem Content="ðŸ”„ Reemplazar duplicados (conservar Ãºltimo)"/>
                            <ComboBoxItem Content="âŒ Error al encontrar duplicados"/>
                            <ComboBoxItem Content="âœ… Permitir duplicados (sin validaciÃ³n)"/>
                        </ComboBox>

                        <!-- DescripciÃ³n informativa -->
                        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" 
                                   Margin="0,8,0,5" 
                                   TextWrapping="Wrap" 
                                   FontSize="11" 
                                   Foreground="#706F6F">
                            <Run Text="ðŸ’¡ "/>
                            <Run Text="Los duplicados se detectan por combinaciÃ³n Ãºnica de "/>
                            <Run Text="Partida Arancelaria + NÃºmero de DeclaraciÃ³n. " FontWeight="SemiBold"/>
                            <Run Text="El sistema mostrarÃ¡ estadÃ­sticas detalladas en el log de procesamiento."/>
                        </TextBlock>
                    </Grid>
                </GroupBox>                <!-- Formato -->
                <GroupBox Header="ðŸ“Š Formato de Datos" 
                          Style="{StaticResource GreenGroupBoxStyle}"
                          Margin="0,0,0,15" 
                          Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Filas por archivo -->
                        <Label Grid.Row="0" Grid.Column="0" 
                               Content="Filas por archivo:" 
                               VerticalAlignment="Center"/>
                        <validation:ValidatingTextBox Grid.Row="0" Grid.Column="1" 
                                                    Text="{Binding MaxRowsPerFile, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                                    Margin="0,5"/>

                        <!-- Formato de fecha -->
                        <Label Grid.Row="1" Grid.Column="0" 
                               Content="Formato de fecha:" 
                               VerticalAlignment="Center"/>
                        <validation:ValidatingTextBox Grid.Row="1" Grid.Column="1" 
                                                    Text="{Binding DateFormat, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                                    Margin="0,5"/>

                        <!-- Separador decimal -->
                        <Label Grid.Row="2" Grid.Column="0" 
                               Content="Separador decimal:" 
                               VerticalAlignment="Center"/>
                        <validation:ValidatingTextBox Grid.Row="2" Grid.Column="1" 
                                                    Text="{Binding DecimalSeparator, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                                    Margin="0,5"/>

                        <!-- Separador de miles -->
                        <Label Grid.Row="3" Grid.Column="0" 
                               Content="Separador de miles:" 
                               VerticalAlignment="Center"/>
                        <validation:ValidatingTextBox Grid.Row="3" Grid.Column="1" 
                                                    Text="{Binding ThousandsSeparator, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                                    Margin="0,5"/>
                    </Grid>
                </GroupBox>                <!-- Resumen de validaciÃ³n -->
                <Border Background="#FFF8F8F8" 
                        BorderBrush="#C0392B" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,15"
                        Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="4" 
                                        ShadowDepth="1" 
                                        Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Errores de validaciÃ³n:" 
                                  FontFamily="Segoe UI"
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#C0392B" 
                                  Margin="0,0,0,8"/>
                        <!-- Lista de errores -->
                        <ItemsControl ItemsSource="{Binding AllErrors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                            FontFamily="Segoe UI"
                                            FontSize="12"
                                            Foreground="#C0392B" 
                                            Margin="0,2" 
                                            TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Restaurar valores predeterminados" 
                    Command="{Binding ResetToDefaultsCommand}" 
                    Padding="10,5" 
                    Margin="5,0"/>
            <Button Content="Validar" 
                    Command="{Binding ValidateConfigurationCommand}" 
                    Padding="10,5" 
                    Margin="5,0"/>            <Button Content="Guardar" 
                    Command="{Binding SaveConfigurationCommand}" 
                    Padding="10,5" 
                    Margin="5,0" 
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
